{
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "port": 8080,
  "output_encoding": "no-op",
  "endpoints": [
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/login",
          "method": "POST",
          "host": ["auth:4000"]
        }
      ]
    },
    {
      "endpoint": "/auth",
      "input_headers": [
        "X-Real-IP"
      ],
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/",
          "method": "POST",
          "host": ["auth:4000"]
        }
      ]
    }
  ]
}